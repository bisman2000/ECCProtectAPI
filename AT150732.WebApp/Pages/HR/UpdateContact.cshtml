@page
@model AT150732.WebApp.Pages.HR.UpdateContactModel
@{
}
<class="container border" style="padding:20px">
<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ContactUpdate.Id"></label>
            </div>
            <div class="col-5">
                <input type="number" asp-for="ContactUpdate.Id" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ContactUpdate.Id"></span>
        </div>

    <div class="form-group row">
        <div class="col-3">
            <label asp-for="ContactUpdate.Address"></label>
        </div>
        <div class="col-5">
            <input type="text" asp-for="ContactUpdate.Address" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="ContactUpdate.Address"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label asp-for="ContactUpdate.Email"></label>
        </div>
        <div class="col-5">
            <input type="email" asp-for="ContactUpdate.Email" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="ContactUpdate.Email"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label asp-for="ContactUpdate.Phone"></label>
        </div>
        <div class="col-5">
            <input type="text" asp-for="ContactUpdate.Phone" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="ContactUpdate.Phone"></span>
    </div>


    <div class="form-group row">
        <div class="col-5">
            <input type="submit" class="btn btn-primary" value="update" />
        </div>
    </div>
</form>
</class>
    @if (ViewData["updateContact"] != null)
    {
    <h2>status: @ViewData["updateContact"]</h2>
    }