@page
@model AT150732.WebApp.Pages.Account.SignupModel
@{
}
<p>
    <h3> User Registration</h3>

</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SignupViewModel.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="SignupViewModel.Username" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="SignupViewModel.Username"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SignupViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="email" asp-for="SignupViewModel.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="SignupViewModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SignupViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="SignupViewModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="SignupViewModel.Password"></span>

        </div>
        <div class="form-group row">
            <div class="col-5">
                <input type="submit" class="btn btn-primary" value="Signup" />
            </div>
        </div>
    </form>"

</div>