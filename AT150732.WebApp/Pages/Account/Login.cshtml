@page
@model AT150732.WebApp.Pages.Account.LoginModel
@{
}
<p>
    <h3> User Login</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post" asp-page-handler="">
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LoginViewModel.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="LoginViewModel.Username" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel.Username"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LoginViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="LoginViewModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>
        </div>

        <div class="row form-check mb-2">
            <input type="checkbox" asp-for="LoginViewModel.RememberLogin" class="form-check-input" />
            <label class="form-check-label" asp-for="LoginViewModel.RememberLogin"></label>
        </div>
        <div class="form-group row">
            <div class="col-5">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>
    </form>
</div>
